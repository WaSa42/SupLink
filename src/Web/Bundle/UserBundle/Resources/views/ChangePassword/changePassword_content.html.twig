{% trans_default_domain 'FOSUserBundle' %}

<div class="container fos-user-content">
    <form action="{{ path('fos_user_change_password') }}" class="form-horizontal" method="POST" {{ form_enctype(form) }}>
        {% if form_errors(form) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder' : 'Mot de passe actuel'} }) }}
                {% if form_errors(form.current_password) %}
                    <span class="help-block alert alert-danger">{{ form_errors(form.current_password) }}</span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder' : 'Nouveau mot de passe'} }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder' : 'RÃ©crire le nouveau mot de passe'} }) }}
                {% if form_errors(form.plainPassword.first) %}
                    <span class="help-block alert alert-danger">{{ form_errors(form.plainPassword.first) }}</span>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-bla btn-lg btn-block">{{ 'change_password.submit'|trans }}</button>
            </div>
        </div>

        <div style="display: none;">
            {{ form_rest(form) }}
        </div>
    </form>
</div>