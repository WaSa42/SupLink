{% trans_default_domain 'FOSUserBundle' %}

<div class="container fos-user-content">
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
        {% if form_errors(form) or form_errors(form.plainPassword.first) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
        {% endif %}

        <div class="row form-group">
            <div class="col-md-6">{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'} }) }}</div>
            <div class="col-md-6">{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'VÃ©rification'} }) }}</div>
        </div>

        {{ form_rest(form) }}

        <button type="submit" class="btn btn-lg btn-bla btn-block">{{ 'registration.submit'|trans }}</button>
    </form>
</div>
