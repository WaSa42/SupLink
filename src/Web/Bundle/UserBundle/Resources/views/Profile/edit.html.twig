{% extends "WebUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <h1>Éditer mon profil</h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container fos-user-content">
        <form action="{{ path('profile_edit') }}" class="fields" method="POST" {{ form_enctype(form) }}>
            {% if form_errors(form) %}
                <div class="alert alert-danger">
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div class="row">
                <div class="form-group col-md-6">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}, 'read_only': 'true' }) }}
                    {% if form_errors(form.username) %}
                        <span class="help-block alert alert-danger">{{ form_errors(form.username) }}</span>
                    {% endif %}
                </div>
                <div class="form-group col-md-6">
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'}, 'read_only': 'true' }) }}
                    {% if form_errors(form.email) %}
                        <span class="help-block alert alert-danger">{{ form_errors(form.email) }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    {{ form_widget(form.lastName, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                    {% if form_errors(form.lastName) %}
                        <span class="help-block alert alert-danger">{{ form_errors(form.lastName) }}</span>
                    {% endif %}
                </div>
                <div class="form-group col-md-6">
                    {{ form_widget(form.firstName, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
                    {% if form_errors(form.firstName) %}
                        <span class="help-block alert alert-danger">{{ form_errors(form.firstName) }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    {{ form_widget(form.job, { 'attr': {'class': 'form-control', 'placeholder': 'Métier'} }) }}
                    {% if form_errors(form.job) %}
                        <span class="help-block alert alert-danger">{{ form_errors(form.job) }}</span>
                    {% endif %}
                </div>
                <div class="form-group col-md-6">
                    {{ form_widget(form.skills, { 'attr': {'class': 'form-control', 'placeholder': 'Compétences'} }) }}
                    {% if form_errors(form.skills) %}
                        <span class="help-block alert alert-danger">{{ form_errors(form.skills) }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block">{{ 'profile.edit.submit'|trans }}</button>
            </div>

            <div style="display: none;">
                {{ form_rest(form) }}
            </div>
        </form>
    </div>
{% endblock %}